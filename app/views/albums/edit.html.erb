<% provide :title, t(".my_album") %>
<div class="container">
  <div class="col-md-3">
    <%= render "users/user_board"%>
  </div>
  <div class="col-md-9">
    <div class="row">
      <h2><i class="fa fa-edit"></i> <%= t ".header_edit_album" %>
      </h2>
      <hr />
      <%= form_for @album do |f| %>
        <div class="form-group">
          <i class="fa fa-user"></i> <%= t ".edit_name" %>
          <%= f.text_field :name, class: "form-control",
            placeholder: t(".placeholder_name"), required: true %>
          <i class="fa fa-picture"></i> <%= t ".image" %>
          <%= f.fields_for :image_attributes do |image_f| %>
            <%= image_f.file_field :image_url %>
            <%= image_f.hidden_field :imageable_id, value: @album.id %>
            <%= image_f.hidden_field :imageable_type, value: "image" %>
          <% end %>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-4">
            <%= f.submit t(".upload"), class: "btn_upload" %>
          </div>
        </div>
      <% end %>
      <br>
    </div>
    <br>
  </div>
</div>
