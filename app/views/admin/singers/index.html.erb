<% provide :title, t(".title") %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="h4 text-center"><%= t ".title" %></div>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= form_tag admin_singers_path, method: :get do %>
            <div class="input-group">
              <%= text_field_tag t(".search"), params[:search],
                placeholder: t(".search"), class: "form-control"%>
              <div class="input-group-btn">
                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-right">
        <%= link_to new_admin_singer_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i>&nbsp;<%= t ".create" %>
        <% end %>
      </div>
      <div class="text-center" id="paginator">
        <%= paginate @singers, remote: true, theme: "twitter-bootstrap-3" %>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= t ".avatar" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".quantity_songs" %></th>
            <th colspan="2"><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody id="singers">
          <%= render @singers %>
        </tbody>
      </table>
    </div>
  </div>
</div>
